require 'cucumber/rake/task'

desc "Run Specs with Bacon"
task :spec do
  sh "bacon spec/**/*.rb --quiet"
end

desc 'Run Code Coverage with RCov'
task :coverage do
  rm_f "coverage"
  rm_f "coverage.data"
  rcov = "rcov --aggregate coverage.data --text-summary --exclude spec\/"
  system("#{rcov} spec/**/*.rb")
end